		{
			"name": "BoardCreation",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set(\"boardName\", pm.environment.replaceIn(\"{{$randomFirstName}}\"));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"BoardCreationStatusCodeTest\", () => {\r",
							"    pm.response.to.have.status(200)    \r",
							"});\r",
							"\r",
							"pm.test(\"BoardNameCheck\", () => {\r",
							"    pm.expect(pm.environment.get(\"boardName\")).to.eql(pm.response.json().name)\r",
							"});\r",
							"\r",
							"pm.test(\"BoardIDCheck\", () => {\r",
							"    pm.response.to.have.jsonBody(\"id\")\r",
							"});\r",
							"\r",
							"pm.environment.set(\"boardID\", pm.response.json().id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/1/boards/?name={{boardName}}&key={{key}}&token={{token}}&defaultLists=false",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"1",
						"boards",
						""
					],
					"query": [
						{
							"key": "name",
							"value": "{{boardName}}"
						},
						{
							"key": "key",
							"value": "{{key}}"
						},
						{
							"key": "token",
							"value": "{{token}}"
						},
						{
							"key": "defaultLists",
							"value": "false"
						}
					]
				}
			},
			"response": []
		},
